    let existsLoggedProofs: bool;
    let existsRevocationProofs: bool;
    let sender: address;
    let ir: Issuer.IssuerResource;
    let logged_cp_len: u64;
    let has_ownership: bool;
    
    let owners: Vector.T<address>;
