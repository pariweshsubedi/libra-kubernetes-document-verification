    Issuer.registerHolder({{student1}});

    // check if a credential proof is registered in earmarked proof
    logged_cp_len = EarmarkedProofs.getCredentialProofLength(copy(sender));
    assert(move(logged_cp_len) == 1, 49);

    return;
}

